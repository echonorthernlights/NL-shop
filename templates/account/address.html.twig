{% extends 'base.html.twig' %}

{% block title %}NLshop - Shipment address{% endblock %}

{% block content %}
<a href="{{path('account_new_address')}}" class="btn btn-info btn-sm float-right">Add Address</a>
<h1>Shipment Address</h1>
<a href="{{path('account')}}">Return to your account</a>
<hr>
{% if(app.user.addresses|length == 0) %}
    <p class="text-center">You have no shipping address in you account, to add one <a href="">Click here</a></p>
{% else %}
<div class="row mb-3">
    {% for address in app.user.addresses %}
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{address.name}}</h5>
                    <p class="card-text">{{address.address}}</p>
                       <p class="card-text">{{address.zipCode}} - {{address.city}} - {{address.country}}</p>
                    <a href="{{path('account_edit_address', {id:address.id})}}">Update</a> | <a href="{{path('account_remove_address', {id:address.id})}}">Delete</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endif %}

{% endblock %}
